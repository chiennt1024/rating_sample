<div class="section">
<%= form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_field :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.text_field :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>
  <%= f.submit %>
<% end %>
</div>